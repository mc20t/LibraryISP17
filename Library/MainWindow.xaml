<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="RegistrationApp"
        Height="450"
        Width="500"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style  x:Key="button" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" 
                             MappingMode="RelativeToBoundingBox" 
                             StartPoint="1,1">
            <GradientStop Color="#FF0ACD0C"/>
            <GradientStop Color="#FF0ACD0C" 
                          Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="ButtonExit" 
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                Content="X" 
                BorderThickness="0" 
                FontSize="20" 
                Foreground="#FFD3C9C9"
                Click="ButtonExit_Click" 
                Style="{StaticResource button}"/>
        <Border 
                Width="400" 
                Height="350"
                Background="White" 
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"
                                  BlurRadius="20"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Authorization"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0 10 0 0" 
                           FontSize="20" 
                           FontFamily="Comic Sans MS"/>

                <TextBlock Text="Enter Login:" 
                           FontFamily="Comic Sans MS" 
                           FontSize="15"
                          HorizontalAlignment="Center"
                           Margin="0 70 0 0"/>

                <TextBox x:Name="TXTLogin" 
                         FontFamily="Comic Sans MS" 
                         FontSize="15"
                         BorderBrush="Black" 
                         BorderThickness="0 0 0 2" 
                         Width="200"
                         HorizontalAlignment="Center" 
                         TextAlignment="Center"/>

                <TextBlock Text="Enter password:"
                           FontFamily="Comic Sans MS" 
                           FontSize="15"
                           HorizontalAlignment="Center" 
                           Margin="0 20 0 0"/>

                <TextBox x:Name="TXTPassword" 
                         FontFamily="Comic Sans MS" 
                         FontSize="15"
                         BorderBrush="Black" 
                         BorderThickness="0 0 0 2"
                         Width="200"
                         HorizontalAlignment="Center" 
                         TextAlignment="Center"/>
                <Border x:Name="BorderCaptcha" 
                        Width="100" 
                        Height="40" 
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        HorizontalAlignment="Center"
                        Visibility="Hidden" 
                        Margin="0 10 0 0" 
                        CornerRadius="2">
                    <TextBlock x:Name="CaptchaTextBlock" 
                               FontFamily="Comic Sans MS"
                               FontSize="12" 
                               Foreground="#FF464646"
                               Visibility="Hidden" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBox  x:Name="CaptchaEnter"
                          Width="100"
                          Height="20" 
                          FontFamily="Comic Sans MS" 
                          Margin="0 10 0 0"
                          HorizontalContentAlignment="Center" 
                          Visibility="Hidden"
                          HorizontalAlignment="Center"/>
                <WrapPanel HorizontalAlignment="Center">
                    <CheckBox x:Name="RememberMe" 
                              Checked="RememberMe_Checked" />
                    <TextBlock Margin="5 0 0 0" 
                               Text="Запомнить меня "/>
                </WrapPanel>
                <Button x:Name="BTNLogin" 
                        Content="Enter" 
                        Width="50"
                        HorizontalAlignment="Center"
                        Margin="0 10 0 0" 
                        Background="#FF0ACD0C" 
                        FontSize="15" 
                        Style="{StaticResource button}" 
                        Click="BTNLogin_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>

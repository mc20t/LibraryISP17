<Window x:Class="Library.Windows.UpdateBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="420" Width="700">
    <Grid Background="Wheat">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/on-the-table-at-library-blurred-background_srzsdgyye_thumbnail-full01.png" 
               Grid.RowSpan="7"
               Grid.ColumnSpan="2"/>

        <!-- Первая колонка -->

        <TextBlock Text="Изменение книги"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="25" 
                   Foreground="White"
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="Название"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Foreground="White"
                   Grid.Row="1"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Количество"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Foreground="White"
                   Grid.Row="2"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Автор"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Foreground="White"
                   Grid.Row="3"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Жанр"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="4"
                   Foreground="White"
                   Margin="0 0 10 0"/>


        <!-- Первая колонка -->

        <TextBox x:Name="txtBookName"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtQuantity"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <ComboBox x:Name="cmbAuthor"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Width="250"
                 FontFamily="Helvetica"
                 FontStyle="Normal"
                 FontWeight="Normal"
                 FontStretch="Normal"
                 VerticalContentAlignment="Center"
                 Grid.Column="1"
                 Grid.Row="3"
                 Height="30"/>
        <ComboBox x:Name="cmbGenre"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Width="250"
                 FontFamily="Helvetica"
                 FontStyle="Normal"
                 FontWeight="Normal"
                 FontStretch="Normal"
                 VerticalContentAlignment="Center"
                 Grid.Column="1"
                 Grid.Row="4"
                 Height="30"/>

        <Button x:Name="btnAdd"
                Content="Изменить"
                FontSize="16"
                Width="100"
                Height="30"
                Grid.Row="6" 
                Grid.ColumnSpan="2"
                Click="btnAdd_Click"/>
    </Grid>
</Window>


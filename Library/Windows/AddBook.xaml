<Window x:Class="Library.Windows.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Добавление книги" Height="450" Width="600">
    <Grid Background="Wheat">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Первая колонка -->

        <TextBlock Text="Добавление книги"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="25" 
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="Название"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="1"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Колличество"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="2"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Фамилия автора"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="3"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Имя автора"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="4"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Жанр"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="5"
                   Margin="0 0 10 0"/>
        

        <!-- Первая колонка -->

        <TextBox x:Name="txtBookName"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtQuantity"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtBookshelfNum"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtBookGenre"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="4"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtAuthorBook"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="5"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        
        <Button x:Name="btnAdd"
                Content="Добавить"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="16"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Margin="10 0 0 0"
                Width="150"
                Height="25" 
                Click="btnAdd_Click"/>
    </Grid>
</Window>

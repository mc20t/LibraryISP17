<Window x:Class="Library.Windows.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Добавление клиента" Height="700" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Первая колонка -->
        
        <TextBlock Text="Добавление читателя"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="25" 
                   Grid.ColumnSpan="2"/>
        <TextBlock Text="Фамилия"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="1"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Имя"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="2"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Телефон"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="3"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Пароль"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="4"
                   Margin="0 0 10 0"/>

        <!-- Первая колонка -->

        <TextBox x:Name="txtLastName"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtFirstName"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtPhone"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        <TextBox x:Name="txtPassword"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="4"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>
        
        <!-- Image block-->

        <Border Grid.Row="7"
                Grid.Column="0"
                Grid.RowSpan="3"
                Grid.ColumnSpan="2"
                Margin="10"
                Width="150"
                CornerRadius="10"
                Height="150"
                BorderThickness="2"
                BorderBrush="LightGray">
            <Image  x:Name="imgUser"
                    Source="/Images/user-icon.png"/>
        </Border>
        <Button x:Name="btnImage"
                Content="Выбрать &#10;изображение"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                FontSize="16"
                Margin="100 10"
                Grid.Row="7"
                Grid.Column="0"
                Grid.RowSpan="3"
                Grid.ColumnSpan="2"
                Width="110"
                Height="50" 
                Click="btnImage_Click"/>
        
        <!-- Add btn -->
        
        <Button x:Name="btnAdd"
                Content="Добавить"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="16"
                Grid.Row="11"
                Grid.ColumnSpan="2"
                Margin="10 0 0 0"
                Width="150"
                Height="25" 
                Click="btnAdd_Click"/>
        
    </Grid>
</Window>
